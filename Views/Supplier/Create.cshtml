@model InventoryManagementSystem.Models.Supplier
@{
    ViewData["Title"] = "Add Supplier";
    Layout = "_DashboardLayout";
}

<div class="container">
    <h1>Add Supplier</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }

    <div style="background: white; padding: 20px; border-radius: 8px; max-width: 600px;">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div style="margin-bottom: 15px;">
                <label asp-for="Name" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                <input asp-for="Name" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div style="margin-bottom: 15px;">
                <label asp-for="Category" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                @if (ViewBag.IsAdmin == true)
                {
                    <!-- Admins can type any category; suggestions provided via datalist -->
                    <input list="categoriesList" asp-for="Category" placeholder="Type or select a category" style="width:100%; padding:8px; border:1px solid #ddd; border-radius:4px;" />
                    <datalist id="categoriesList">
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var c in (List<string>)ViewBag.Categories)
                            {
                                <option value="@c"></option>
                            }
                        }
                    </datalist>
                }
                else
                {
                    <select asp-for="Category" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                        <option value="">-- Select Category --</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var c in (List<string>)ViewBag.Categories)
                            {
                                <option value="@c">@c</option>
                            }
                        }
                        else
                        {
                            <option>Furniture</option>
                            <option>Electronics</option>
                            <option>Building Materials</option>
                            <option>Clothing &amp; Apparel</option>
                            <option>Stationery</option>
                        }
                    </select>
                }
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div style="margin-bottom: 15px;">
                <label asp-for="ContactPersonName" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                <input asp-for="ContactPersonName" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                <span asp-validation-for="ContactPersonName" class="text-danger"></span>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 15px;">
                <div>
                    <label asp-for="PhoneNumber" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                    <input asp-for="PhoneNumber" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="EmailAddress" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                    <input asp-for="EmailAddress" type="email" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
            </div>

            <div style="margin-bottom: 15px;">
                <label asp-for="PhysicalAddress" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                <textarea asp-for="PhysicalAddress" rows="3" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;"></textarea>
                <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
            </div>

            <div style="margin-bottom: 15px;">
                <label>
                    <input type="checkbox" asp-for="IsActive" checked /> Is Active
                </label>
            </div>

            <div style="display: flex; gap: 10px; margin-top: 20px;">
                <button type="submit" style="background-color: #2d5a5a; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">Add Supplier</button>
                <a href="/Supplier" style="background-color: #6c757d; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; display: inline-block;">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .alert {
        padding: 12px 20px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }
    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
    .text-danger {
        color: #dc3545;
        font-size: 14px;
    }
</style>


