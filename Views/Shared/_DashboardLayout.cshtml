@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Inventory Management</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script>
        // Define logout functions immediately so they're available when the page loads
        window.confirmLogout = function(event) {
            if (event) {
                event.preventDefault();
                event.stopPropagation();
            }
            const modal = document.getElementById('logoutModal');
            if (modal) {
                modal.style.display = 'flex';
            }
            return false;
        };

        window.closeLogoutModal = function() {
            const modal = document.getElementById('logoutModal');
            if (modal) {
                modal.style.display = 'none';
            }
        };

        window.proceedLogout = function() {
            window.location.href = '/Account/Logout';
        };
    </script>
</head>
<body>
    <div class="dashboard-container">
        <!-- Fixed Sidebar (always expanded) -->
        <aside class="sidebar fixed" id="sidebar" aria-label="Main navigation">
            <div class="sidebar-header" title="Inventory">
                <div class="logo-circle"><i class="fas fa-box"></i></div>
                <span class="sidebar-title">Inventory</span>
            </div>

            <div class="sidebar-user" title="User">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <div class="username">@(Context.Session.GetString("UserName") ?? "User")</div>
                    <div class="user-email">@(Context.Session.GetString("UserEmail") ?? "user@example.com")</div>
                </div>
            </div>

            <nav class="sidebar-nav" role="navigation">
                @{
                    var role = Context.Session.GetString("UserRole") ?? "User";
                }
                @if (role.ToLower() == "user")
                {
                    <a href="/Dashboard/UserDashboard" class="nav-item">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/Inventory" class="nav-item active">
                        <i class="fas fa-box"></i>
                        <span>Inventory</span>
                    </a>
                    <a href="/Order/Create" class="nav-item">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Create Order</span>
                    </a>
                    <a href="/Message" class="nav-item">
                        <i class="fas fa-envelope"></i>
                        <span>Messages</span>
                    </a>
                    <a href="/Contact" class="nav-item">
                        <i class="fas fa-address-book"></i>
                        <span>Contact</span>
                    </a>
                    <a href="/About" class="nav-item">
                        <i class="fas fa-info-circle"></i>
                        <span>About</span>
                    </a>
                    <a href="#" onclick="event.preventDefault(); event.stopPropagation(); confirmLogout(event); return false;" class="nav-item">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                }
                else
                {
                    <a href="/Dashboard" class="nav-item">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Dashboard</span>
                    </a>
                    <a href="/Inventory" class="nav-item active">
                        <i class="fas fa-box"></i>
                        <span>Inventory</span>
                    </a>
                    <a href="/Product/Add" class="nav-item">
                        <i class="fas fa-cart-plus"></i>
                        <span>Add Product</span>
                    </a>
                    <a href="/Outgoing/Create" class="nav-item">
                        <i class="fas fa-arrow-circle-up"></i>
                        <span>Outgoing Product</span>
                    </a>
                    <a href="/Outgoing/History" class="nav-item">
                        <i class="fas fa-list"></i>
                        <span>Outgoing History</span>
                    </a>
                    <a href="/Order" class="nav-item">
                        <i class="fas fa-file-alt"></i>
                        <span>Orders</span>
                    </a>
                    <a href="/Employee" class="nav-item">
                        <i class="fas fa-users"></i>
                        <span>Employees</span>
                    </a>
                    <a href="/Supplier" class="nav-item">
                        <i class="fas fa-truck"></i>
                        <span>Suppliers</span>
                    </a>
                    <a href="/Salary" class="nav-item">
                        <i class="fas fa-money-bill-wave"></i>
                        <span>Salary</span>
                    </a>
                    <a href="/Message" class="nav-item">
                        <i class="fas fa-envelope"></i>
                        <span>Messages</span>
                        @if (ViewBag.UnreadMessageCount != null && ViewBag.UnreadMessageCount > 0)
                        {
                            <span style="background: #dc3545; color: white; border-radius: 50%; padding: 2px 6px; font-size: 10px; margin-left: auto;">@ViewBag.UnreadMessageCount</span>
                        }
                    </a>
                    <a href="/Report" class="nav-item">
                        <i class="fas fa-chart-bar"></i>
                        <span>Reports</span>
                    </a>
                        <!-- About & Contact removed for Admins per role spec -->
                        <a href="/MissionVision" class="nav-item">
                            <i class="fas fa-bullseye"></i>
                            <span>Mission & Vision</span>
                        </a>
                        <a href="/TeamProfile" class="nav-item">
                            <i class="fas fa-users"></i>
                            <span>Team Profiles</span>
                        </a>
                    <a href="#" onclick="event.preventDefault(); event.stopPropagation(); confirmLogout(event); return false;" class="nav-item">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Logout</span>
                    </a>
                }
            </nav>
        </aside>
        
                <!-- Main Content -->
            <main class="main-content">
                <!-- Top Navbar -->
                <header class="top-navbar" role="banner">
                    <div class="nav-left">
                        <button id="mobileSidebarToggle" class="mobile-toggle" aria-label="Toggle sidebar"><i class="fas fa-bars"></i></button>
                        <div class="brand">Inventory Management</div>
                    </div>
                    <div class="nav-center">
                        <input class="nav-search" placeholder="Search..." aria-label="Search" />
                    </div>
                    <div class="nav-right">
                        <a href="/Message" title="Messages" class="nav-icon"><i class="fas fa-envelope"></i></a>
                        <a href="/Account/Profile" title="Profile" class="nav-icon"><i class="fas fa-user-circle"></i></a>
                        <a href="#" onclick="event.preventDefault(); event.stopPropagation(); confirmLogout(event); return false;" title="Logout" class="nav-icon"><i class="fas fa-sign-out-alt"></i></a>
                    </div>
                </header>

                <div class="content-wrapper">
                    @RenderBody()
                </div>
            </main>
    </div>
    
    <!-- Beautiful Logout Confirmation Modal -->
    <div id="logoutModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.6); z-index: 10000; align-items: center; justify-content: center; backdrop-filter: blur(4px);" onclick="if(event.target === this) closeLogoutModal();">
        <div style="background: white; border-radius: 20px; box-shadow: 0 25px 70px rgba(0, 0, 0, 0.4); max-width: 480px; width: 90%; padding: 0; overflow: hidden; animation: slideInModal 0.3s ease-out;">
            <!-- Modal Header -->
            <div style="background: linear-gradient(135deg, #2d5a5a 0%, #1a3a3a 100%); padding: 30px; text-align: center; position: relative;">
                <div style="width: 80px; height: 80px; background: rgba(255, 255, 255, 0.15); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 20px; border: 3px solid rgba(255, 255, 255, 0.3);">
                    <i class="fas fa-sign-out-alt" style="font-size: 40px; color: white;"></i>
                </div>
                <h2 style="color: white; margin: 0; font-size: 26px; font-weight: 600; letter-spacing: 0.5px;">Confirm Logout</h2>
            </div>
            
            <!-- Modal Body -->
            <div style="padding: 35px 30px;">
                <p style="color: #333; font-size: 17px; line-height: 1.7; margin: 0 0 25px 0; text-align: center; font-weight: 500;">
                    Are you sure you want to log out?
                </p>
                <div style="background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%); border-left: 4px solid #2d5a5a; padding: 18px; border-radius: 10px; margin: 25px 0;">
                    <div style="display: flex; align-items: center; justify-content: center; gap: 12px;">
                        <i class="fas fa-info-circle" style="font-size: 20px; color: #2d5a5a;"></i>
                        <p style="margin: 0; color: #2d5a5a; font-size: 14px; font-weight: 500;">
                            You will need to log in again to access the system
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Modal Footer -->
            <div style="padding: 25px 30px; background: #f8f9fa; display: flex; gap: 12px; justify-content: flex-end; border-top: 1px solid #e9ecef;">
                <button type="button" onclick="closeLogoutModal()" style="background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%); color: white; border: none; padding: 14px 35px; border-radius: 10px; cursor: pointer; font-size: 15px; font-weight: 600; transition: all 0.3s; box-shadow: 0 4px 15px rgba(108, 117, 125, 0.2);">
                    <i class="fas fa-times"></i> Cancel
                </button>
                <button type="button" onclick="proceedLogout()" style="background: linear-gradient(135deg, #2d5a5a 0%, #1a3a3a 100%); color: white; border: none; padding: 14px 35px; border-radius: 10px; cursor: pointer; font-size: 15px; font-weight: 600; box-shadow: 0 4px 15px rgba(45, 90, 90, 0.3); transition: all 0.3s;">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </button>
            </div>
        </div>
    </div>

    <style>
        @@keyframes slideInModal {
            from {
                opacity: 0;
                transform: translateY(-60px) scale(0.9);
            }
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        #logoutModal button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.25) !important;
        }

        #logoutModal button:active {
            transform: translateY(0);
        }

        #logoutModal button i {
            margin-right: 8px;
        }
    </style>

    <style>
        /* Fixed sidebar styles: always expanded */
        .dashboard-container { display:flex; }
        .sidebar.fixed {
            width: 220px;
            min-width: 220px;
            background: linear-gradient(180deg,#164640 0%, #1f6b6b 100%);
            color: #fff;
            height: 100vh;
            overflow: auto;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding-top: 18px;
            padding-left: 14px;
            box-shadow: 2px 0 12px rgba(0,0,0,0.08);
        }

        .sidebar.fixed .logo-circle { width:44px; height:44px; border-radius:10px; background: rgba(255,255,255,0.06); display:flex; align-items:center; justify-content:center; font-size:18px; margin-right:8px }
        .sidebar.fixed .sidebar-title { display:inline-block; margin-left:8px; font-size:18px; font-weight:700; }
        .sidebar.fixed .sidebar-user { margin-top:18px; margin-bottom:8px; text-align:left; width:100%; display:flex; gap:10px; align-items:center }
        .sidebar.fixed .user-avatar { width:44px; height:44px; border-radius:50%; background: rgba(255,255,255,0.06); display:flex; align-items:center; justify-content:center; }
        .sidebar.fixed .user-info { display:block; }

        .sidebar.fixed .sidebar-nav { display:flex; flex-direction:column; gap:8px; width:100%; padding: 10px 6px; }
        .sidebar.fixed .nav-item { width:100%; display:flex; align-items:center; gap:12px; padding:10px 12px; color: #fff; text-decoration:none; font-weight:600; border-radius:8px; }
        .sidebar.fixed .nav-item i { font-size:18px; width:28px; text-align:center; }
        .sidebar.fixed .nav-item span { display:inline-block; }

        .sidebar.fixed .nav-item.active { background: rgba(255,255,255,0.06); }
        .sidebar.fixed .nav-item:hover { background: rgba(255,255,255,0.03); }

        /* Top navbar */
        .top-navbar { position: fixed; top: 0; left: 220px; right: 0; height: 64px; background: linear-gradient(90deg,#ffffff 0%, #f7fbfb 100%); display:flex; align-items:center; gap:16px; padding: 0 18px; box-shadow: 0 6px 20px rgba(10,10,10,0.06); z-index: 900; }
        .top-navbar .brand { font-weight:700; font-size:18px; color:#1e3939; }
        .top-navbar .nav-left { display:flex; align-items:center; gap:12px; }
        .top-navbar .nav-center { flex:1; display:flex; justify-content:center }
        .top-navbar .nav-right { display:flex; gap:12px; align-items:center }
        .top-navbar .nav-icon { color:#1e3939; text-decoration:none; font-size:18px; padding:8px; border-radius:8px }
        .top-navbar .nav-search { width:60%; max-width:520px; padding:8px 12px; border-radius:8px; border:1px solid #e6f0ef; background: #fff; }

        /* Adjust main content spacing to account for fixed sidebar and navbar */
        main.main-content { margin-left: 220px; margin-top: 64px; transition: margin 200ms ease; width: calc(100% - 220px); }

        /* small-screen adjustments */
        @@media (max-width: 900px) {
            .sidebar.fixed { position: fixed; left: 0; top: 0; height: 100vh; width: 220px; }
            .top-navbar { left: 220px; }
            main.main-content { margin-left: 220px; }
        }
    </style>

    <script src="~/js/site.js"></script>
    <script>
        // Ensure logout functions are available globally
        window.confirmLogout = function(event) {
            if (event) {
                event.preventDefault();
                event.stopPropagation();
            }
            const modal = document.getElementById('logoutModal');
            if (modal) {
                modal.style.display = 'flex';
            }
            return false;
        };

        window.closeLogoutModal = function() {
            const modal = document.getElementById('logoutModal');
            if (modal) {
                modal.style.display = 'none';
            }
        };

        window.proceedLogout = function() {
            window.location.href = '/Account/Logout';
        };

        // Close logout modal when clicking outside
        document.addEventListener('DOMContentLoaded', function() {
            const logoutModal = document.getElementById('logoutModal');
            if (logoutModal) {
                logoutModal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeLogoutModal();
                    }
                });
            }

            // Close modal with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    const modal = document.getElementById('logoutModal');
                    if (modal && modal.style.display === 'flex') {
                        closeLogoutModal();
                    }
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

