@model InventoryManagementSystem.Models.Category
@{
    ViewData["Title"] = "Add Category";
    Layout = "_DashboardLayout";
}

<div class="container">
    <h1>Add Category</h1>

    <div style="background: white; padding: 20px; border-radius: 8px; max-width: 600px;">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div style="margin-bottom: 15px;">
                <label asp-for="Name" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                <input asp-for="Name" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div style="display: flex; gap: 10px; margin-top: 20px;">
                <button type="submit" class="btn btn-primary">Add Category</button>
                <a href="/Category" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
