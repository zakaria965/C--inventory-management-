@model InventoryManagementSystem.Models.Salary
@{
    ViewData["Title"] = "Delete Salary Record";
    Layout = "_DashboardLayout";
}

<div class="container">
    <h1>Delete Salary Record</h1>

    <div class="alert alert-warning" style="background-color: #fff3cd; color: #856404; padding: 15px; border-radius: 4px; margin-bottom: 20px; border: 1px solid #ffeaa7;">
        <strong>Warning!</strong> Are you sure you want to delete this salary record? This action cannot be undone.
    </div>

    <div style="background: white; padding: 20px; border-radius: 8px; max-width: 600px;">
        <dl style="display: grid; grid-template-columns: 1fr 2fr; gap: 15px;">
            <dt style="font-weight: bold; color: #2d5a5a;">Employee:</dt>
            <dd>@Model.Employee?.FullName</dd>

            <dt style="font-weight: bold; color: #2d5a5a;">Month/Year:</dt>
            <dd>@Model.Month/@Model.Year</dd>

            <dt style="font-weight: bold; color: #2d5a5a;">Salary Type:</dt>
            <dd>@Model.SalaryType</dd>

            <dt style="font-weight: bold; color: #2d5a5a;">Salary Amount:</dt>
            <dd>$@Model.SalaryAmount.ToString("N2")</dd>

            <dt style="font-weight: bold; color: #2d5a5a;">Status:</dt>
            <dd>
                @if (Model.IsPaid)
                {
                    <span style="background: #28a745; color: white; padding: 4px 8px; border-radius: 4px; font-size: 12px;">Paid</span>
                }
                else
                {
                    <span style="background: #dc3545; color: white; padding: 4px 8px; border-radius: 4px; font-size: 12px;">Unpaid</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post" style="margin-top: 20px;">
            <input type="hidden" asp-for="Id" />
            <div style="display: flex; gap: 10px;">
                <button type="submit" style="background-color: #dc3545; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">Delete</button>
                <a href="/Salary" style="background-color: #6c757d; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; display: inline-block;">Cancel</a>
            </div>
        </form>
    </div>
</div>


