@model InventoryManagementSystem.Models.Product
@{
    ViewData["Title"] = "Add Product";
    Layout = "_DashboardLayout";
}

<div class="container">
    <h1>Add Product</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }

    <div style="background: white; padding: 20px; border-radius: 8px; max-width: 600px;">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div style="margin-bottom: 15px;">
                <label asp-for="Name" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                <input asp-for="Name" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div style="margin-bottom: 15px;">
                <label asp-for="SKU" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                <input asp-for="SKU" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                <span asp-validation-for="SKU" class="text-danger"></span>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 15px;">
                <div>
                    <label asp-for="QuantityInStock" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                    <input asp-for="QuantityInStock" type="number" min="0" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                    <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="MinimumStockLevel" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                    <input asp-for="MinimumStockLevel" type="number" min="0" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                    <span asp-validation-for="MinimumStockLevel" class="text-danger"></span>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 15px;">
                <div>
                    <label asp-for="CostPrice" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                    <input asp-for="CostPrice" type="number" step="0.01" min="0" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                    <span asp-validation-for="CostPrice" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="SellingPrice" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                    <input asp-for="SellingPrice" type="number" step="0.01" min="0" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;" />
                    <span asp-validation-for="SellingPrice" class="text-danger"></span>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px; margin-bottom: 15px;">
                <div>
                    <label asp-for="Category" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                    <select asp-for="Category" id="Category" required style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                        <option value="">-- Select Category --</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var c in (List<string>)ViewBag.Categories)
                            {
                                <option value="@c">@c</option>
                            }
                        }
                        else
                        {
                            <option value="Furniture">Furniture</option>
                            <option value="Electronics">Electronics</option>
                            <option value="Building Materials">Building Materials</option>
                        }
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Supplier" style="display: block; margin-bottom: 5px; font-weight: bold;"></label>
                    <select asp-for="Supplier" id="Supplier" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                        <option value="">-- Select Supplier --</option>
                        @if (ViewBag.Suppliers != null)
                        {
                            @foreach (var supplier in (List<InventoryManagementSystem.Models.Supplier>)ViewBag.Suppliers)
                            {
                                <option value="@supplier.Name" data-category="@supplier.Category">@supplier.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Supplier" class="text-danger"></span>
                </div>
            </div>

            <div style="display: flex; gap: 10px; margin-top: 20px;">
                <button type="submit" style="background-color: #2d5a5a; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer;">Add Product</button>
                <a href="/Inventory" style="background-color: #6c757d; color: white; padding: 10px 20px; text-decoration: none; border-radius: 4px; display: inline-block;">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const categorySelect = document.getElementById('Category');
            const supplierSelect = document.getElementById('Supplier');

            // Auto-fill supplier when category changes
            categorySelect.addEventListener('change', function() {
                const selectedCategory = this.value;
                
                // Filter suppliers by category
                const options = supplierSelect.options;
                let foundMatch = false;
                
                for (let i = 0; i < options.length; i++) {
                    const option = options[i];
                    if (option.value === '') continue; // Skip empty option
                    
                    const optionCategory = option.getAttribute('data-category');
                    if (optionCategory === selectedCategory) {
                        supplierSelect.value = option.value;
                        foundMatch = true;
                        break;
                    }
                }
                
                // If no match found, clear selection
                if (!foundMatch) {
                    supplierSelect.value = '';
                }
            });

            // Set initial supplier if category is pre-selected
            if (categorySelect.value) {
                categorySelect.dispatchEvent(new Event('change'));
            }
        });
    </script>
}

<style>
    .alert {
        padding: 12px 20px;
        margin-bottom: 20px;
        border: 1px solid transparent;
        border-radius: 4px;
    }
    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }
    .text-danger {
        color: #dc3545;
        font-size: 14px;
    }
</style>
